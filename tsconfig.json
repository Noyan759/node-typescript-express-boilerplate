{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
        "allowJs": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "lib": [ "es2019", "dom" ]
    },
    "include": [
        "./src/**/*"
    ]
}